# Flask environment
FLASK_ENV=development
DEBUG=true

# Security
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
# In development, this is auto-generated if not set
SECRET_KEY=your-secret-key-here

# CORS Origins (comma-separated list of allowed origins)
# For development, include your local frontend URLs
# For production, use your actual domain(s)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Upload settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=67108864

# File cleanup settings
# Files older than this will be deleted automatically
FILE_MAX_AGE_HOURS=1
CLEANUP_INTERVAL_MINUTES=10

# Logging
LOG_FILE=app.log
LOG_LEVEL=INFO

# Redis (optional, for distributed rate limiting)
# If not set, uses in-memory storage
# REDIS_URL=redis://localhost:6379
